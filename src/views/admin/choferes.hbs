                        BOOSTRAP --}}
                        <input type="text" class="form-control" id="recipient-name" name="name" required>
                        <div class="invalid-feedback">
                            Este campo no puede estar vacio!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="recipient-lastname" name="lastname" required>
                        <div class="invalid-feedback">
                            Este campo no puede estar vacio!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="dni" class="form-label">DNI</label>
                        <input type="number" class="form-control" id="recipient-dni" name="dni" required>
                        <div class="invalid-feedback">
                            <p id="invalid-dni">Este campo no puede estar vacio!</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="mail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="recipient-email" name="email" required>
                        <div class="invalid-feedback">
                            <p id="invalid-email">Este campo no puede estar vacio!</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre de usuario</label>
                        <input type="text" class="form-control" id="recipient-username" name="username" required>
                        <div class="invalid-feedback">
                            <p id="invalid-username">Este campo no puede estar vacio!</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="recipient-password" name="password" required>
                        <div class="invalid-feedback">
                            <p id="invalid-password">Este campo no puede estar vacio!</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="confirmpassword" class="form-label">Confirmar contraseña</label>
                        <input type="password" class="form-control" id="recipient-confirmpassword"
                            name="confirmPassword" required>
                        <div class="invalid-feedback">
                            <p id="invalid-confirmpassword">Este campo no puede estar vacio!</p>
                        </div>
                    </div>
                    <div class="mb-3">
                        <small>
                            <input type="checkbox" id="ver" class="ver" onChange="hideOrShowPassword()">
                            <label class="text">Mostrar contraseñas</label>
                        </small>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success" id="guardarButton"></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
