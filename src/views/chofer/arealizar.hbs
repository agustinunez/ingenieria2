<div class="mx-3 container_tablas">
    <strong>
        <table class="table table-dark table-borderless" id="table" data-search="true" data-toggle="table"
            data-buttons="buttons" data-buttons-class="success" data-show-button-text="true" data-pagination="true"
            data-locale="es-AR">
            <thead>
                <tr class="">
                    <th data-field="ruta" data-sortable="true">
                        Ruta
                    </th>
                    <th data-field="fecha_salida" data-sortable="true">
                        Fecha de salida
                    </th>
                    <th data-field="hora_salida" data-sortable="true">
                        Hora de salida
                    </th>
                    <th data-field="fecha_llegada" data-sortable="true">
                        Fecha de llegada
                    </th>
                    <th data-field="hora_llegada" data-sortable="true">
                        Hora de llegada
                    </th>
                    <th data-field="estado" data-sortable="true">
                        Estado
                    </th>
                    <th data-field="comenzar" data-sortable="true">
                        Comenzar
                    </th>
                    <th data-field="cancelar" data-sortable="true">
                        Cancelar
                    </th>
                    <th data-field="insumos" data-sortable="true">
                        Insumos
                    </th>
                    <th data-field="finalizar" data-sortable="true">
                        Fializar
                    </th>
                    <th data-field="id_usuarioviaje" data-formatter="LinkFormatterInsumos"><i class="fas fa-cart-plus"></i>
                    <th data-field="id_usuarioviaje" data-formatter="LinkFormatterComenzar"><iclass="fas fa-undo-alt"></i>
                    </th>
                    <th data-field="id_usuarioviaje" data-formatter="LinkFormatterFinalizar"><i class="fas fa-comments"></i>
                    </th>
                    <th data-field="id_usuarioviaje" data-formatter="LinkFormatterCancelar"><i class="fas fa-comments"></i>
                    </th>
                    
                </tr>
            </thead>
        </table>
    </strong>
</div>

<script>
    $(document).ready(function () {
        $table = $('#table');
        $('#table').bootstrapTable('load', []);
        $.ajax({
            type: 'GET',
            url: 'http://localhost:3000/user/aRealizarJSON',
            data: {},
            dataType: 'json',
            success: function (data) {
                $('#table').bootstrapTable('load', data);
            }, error: function () {
                alert('Error conexion con el servidor');
            }
        });
    });
    function LinkFormatterComenzar(value) {
        return "<a onclick='confirmar(" + value + ")' ><button class='btn btn-danger'>Devolver</button></a> "; //se tiene q cambiar la ruta para comenzar viajes
    }

    function LinkFormatterFinalizar(value, row) {
        return "<a href='/user/detalles/" + value + "' ><button class='btn btn-primary'>Finalizar</button></a> ";//se tiene q cambiar la ruta para finalizar viajes
    }

    function LinkFormatterInsumos(value, row) {
        return "<a href='/user/insumos/" + value + "' ><button class='btn btn-warning'>Insumos</button></a> ";//se tiene q cambiar la ruta para vender insumos
    }

    function LinkFormatterCancelar(value, row) {
        return "<a href='/user/insumos/" + value + "' ><button class='btn btn-warning'>Insumos</button></a> ";//se tiene q cambiar la ruta para cancelar viaje
    }

</script>